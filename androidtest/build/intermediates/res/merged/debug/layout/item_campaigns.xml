<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_campaigns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView style="@style/Card">

        <ImageView
            android:id="@+id/photo"
            style="@style/CardPhoto"
            android:scaleType="fitXY"
            android:transitionName="photo1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:orientation="vertical">
        <TextView
            android:id="@+id/name_textView_photo"
            android:text="Name"
            android:textColor="@android:color/white"
            style="@style/CardTitle" />

        <TextView
            android:id="@+id/subline_textView_photo"
            android:text="Subline"
            android:textColor="@android:color/white"
            style="@style/CardSubTitle" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>